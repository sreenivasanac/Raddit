<%= div_for(comment) do %>
  <div class="comments_wrapper clearfix">
    <div class="pull-left">
      <p class="lead"><%= comment.body %></p>
      <p><small> Submitted <strong><%= time_ago_in_words(comment.created_at) %> ago </strong> by <%= comment.user.email %></small></p><br/>
    </div>
    <div class="btn-group">
      <% if comment.user == current_user %>
        <%= link_to 'Destroy', comment, method: :delete, data: {confirm: 'Are you Sure?'}, class: 'btn btn-default' %>
      <% end %>
    </div>
  </div>
<% end %>
